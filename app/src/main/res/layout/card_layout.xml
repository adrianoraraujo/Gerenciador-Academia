<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="340dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/medida_margem"
        android:layout_marginRight="@dimen/medida_margem"
        app:cardBackgroundColor="@color/pataFilhoteElefante">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
            android:textStyle="bold"
            android:text="Academia STARK 360"
            android:layout_marginTop="13dp"
            android:textSize="23sp"
            android:layout_gravity="top|center"
            android:id="@+id/tv_nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_num"
            android:text="tel: (61) 9 98125199"
            android:textSize="15sp"
            android:layout_gravity="top|center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/img_academia"
                android:src="@mipmap/casal"
                android:layout_margin="12dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tv_data"
                android:layout_marginTop="-20dp"
                android:text="13/05/2012"
                android:textSize="13sp"
                android:layout_gravity="top|center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>